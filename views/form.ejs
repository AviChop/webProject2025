<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Search Restaurants</title>
  <link rel="stylesheet" href="/css/style.css" />
  <!-- Bootstrap CSS only for button styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    /* Fix logout button in top-right corner */
    #logoutBtn {
      position: fixed;
      top: 15px;
      right: 15px;
      z-index: 1000;
    }
  </style>
</head>
<body>
  <h1>üçΩÔ∏è Search Restaurants</h1>

  <form action="/restaurants/form" method="get" class="search-form">
    <div class="form-row">
      <div class="form-group">
        <label for="borough">Borough:</label>
        <input
          type="text"
          id="borough"
          name="borough"
          placeholder="e.g. Bronx"
          autocomplete="off"
        />
      </div>
      <div class="form-group">
        <label for="page">Page:</label>
        <input type="number" id="page" name="page" value="1" min="1" />
      </div>
      <div class="form-group">
        <label for="perPage">Results per Page:</label>
        <input type="number" id="perPage" name="perPage" value="5" min="1" />
      </div>
      <div class="form-group submit-group">
        <button type="submit">Search</button>
      </div>
    </div>
  </form>

  <button id="logoutBtn" class="btn btn-danger btn-sm">Logout</button>

  <script>
    // Logout button clears token & redirects to home
    document.getElementById("logoutBtn").addEventListener("click", () => {
      localStorage.removeItem("token");
      window.location.href = "/";
    });

    // Redirect to login if no token (optional protection)
    if (!localStorage.getItem("token")) {
      window.location.href = "/login";
    }
  </script>
</body>
</html>
